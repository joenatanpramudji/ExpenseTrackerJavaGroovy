<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="83dp">

        <TextView
            android:id="@+id/text_total_expenses_description"
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="500dp"
            android:text="@string/total_expenses_description"
            android:textAlignment="textStart"
            android:textSize="40sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="294dp"
        android:layout_height="92dp">

        <TextView
            android:id="@+id/text_total_expenses"
            android:layout_width="279dp"
            android:layout_height="76dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="500dp"
            android:textAlignment="textStart"
            android:textSize="40sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edit_text_expense_amount"
            android:layout_width="295dp"
            android:layout_height="79dp"
            android:ems="10"
            android:hint="@string/expense_enter_amount"
            android:inputType="text" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edit_text_expense_description"
            android:layout_width="295dp"
            android:layout_height="79dp"
            android:ems="10"
            android:hint="@string/expense_enter_description"
            android:inputType="text" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edit_text_expense_type"
            android:layout_width="295dp"
            android:layout_height="79dp"
            android:ems="10"
            android:hint="@string/expense_enter_type"
            android:inputType="text" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edit_text_expense_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/date_format_hint"
            android:inputType="date" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/add_expense_button"
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:layout_marginBottom="320dp"
            android:background="#FFFFFF"
            android:backgroundTint="@color/teal_200"
            android:backgroundTintMode="src_atop"
            android:text="@string/add_expense_button" />
    </LinearLayout>
</LinearLayout>